root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# C#
[*.{cs,csx}]
indent_size = 4
end_of_line = lf
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true
csharp_new_line_before_open_brace = all

# TypeScript / HTML / CSS / JSON / Markdown / YAML
[*.{ts,tsx,js,jsx,html,css,scss,md,json,yml,yaml}]
indent_size = 2
end_of_line = lf
max_line_length = 120
